<%= form_for @category, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <% unless @category.parent.nil? %>
  <div class="control-group">
    <div class="controls">
      <p class="help-block">Categor√≠a padre:</p>
      <%= @category.parent.nombre %> (Id:<%= @category.parent.id %>)
      <%= f.hidden_field :parent_id %>
    </div>
  </div>
  <% end -%>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn' %>
  </div>
<% end %>
