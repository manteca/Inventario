<%= simple_form_for @category, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :nombre, required: true %>
  </div>

  <% unless @category.parent.nil? %>
  <div class="control-group">
    <div class="controls">
      <p class="help-block">Categor√≠a padre:</p>
      <%= @category.parent.nombre %> (Id:<%= @category.parent.id %>)
      <%= f.input :parent_id, as: :hidden %>
    </div>
  </div>
  <% end -%>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to 'Cancel', categories_path, class: "btn"  %>
  </div>
<% end %>

