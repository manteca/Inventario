<%= simple_form_for @producto, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :sku %>
    <%= f.input :nombre, required: true %>
    <%= f.association :umedida, label_method: :nombre, value_method: :id %>
    <%= f.association :category, collection: @categories, label_method: :nombre, value_method: :id %>
    <%= f.input :stock_minimo, input_html: { value: f.object.stock_minimo || '1' } %>
    <%= f.input :stock_critico, input_html: { value: f.object.stock_critico || '1' } %>
    <%= f.input :costo, input_html: { value: f.object.costo || '0' } %>
    <%= f.input :estado, :input_html => { :checked => f.object.estado.nil? ? true : f.object.estado } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to 'Cancel', productos_path, class: "btn"  %>
  </div>
<% end %>


